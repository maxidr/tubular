<div class="page-header">
  <h1>Crear una cuenta</h1>
  <%= link_to "Acceder", new_session_path(resource_name) %>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :surname %>
      <div class="input">
        <%= f.text_field :surname %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Crear nueva cuenta", :class => 'btn primary' %>
      <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name) %>
    </div>
  </fieldset>
<% end %>

